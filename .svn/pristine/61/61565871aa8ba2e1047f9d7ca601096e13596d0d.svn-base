table {
    background-color: white;
    border-collapse: separate;
    border-spacing: 10;
    box-shadow: 
        0px 0px 0px 5px rgba( 255,255,255,0.4 ), 
        0px 4px 20px rgba( 0,0,0,0.33 );
    border: 5px solid rgba(255, 255, 255, .3);
    border-radius: 10px;
    -moz-border-radius: 5px;
    padding: 5px;
    padding-left: 30px;
    padding-right: 30px;
    margin-top: 20px;
}

